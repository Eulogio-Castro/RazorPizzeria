@using Microsoft.AspNetCore.Identity
@using RazorPizzeria.Areas.Identity.Data

@inject SignInManager<RazorPizzeriaUser> SignInManager
@inject UserManager<RazorPizzeriaUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a id="manage" class="nav-link mynavbartext" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline mynavbartext" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link mynavbartext" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link textmynavbartext" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
